{
    "mode": "sr",
    "use_cl": true,
    "gpu_ids": [0],

    "scale": 2,
    "is_train": true,
    "use_chop": true,
    "rgb_range": 255,
    "self_ensemble": false,
    "save_image": false,

    "datasets": {
      "train": {
        "mode": "LRHR",
        "dataroot_HR": "./Train/Cam4/DIV2K_train_HR_aug/x2",
        "dataroot_LR": "./Train/Cam4/DIV2K_train_LR_aug/x2",
        "data_type": "npy",
        "n_workers": 4,
        "batch_size": 32,
        "LR_size": 40,
        "use_flip": true,
